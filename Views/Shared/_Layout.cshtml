    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <div class="topnav">
             <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
