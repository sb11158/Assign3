@{
    ViewBag.Title = "All Movies Watched";
}
@model IEnumerable<Assign3.Models.ApplicationResponse>

<div>
    <h2>Here are all the movies you have entered</h2>

    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent to</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Assign3.Models.ApplicationResponse x in Model)
            {
                @if (x.Title != "Independence Day")
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
